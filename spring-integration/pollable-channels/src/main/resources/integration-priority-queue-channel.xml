<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">

    <int:channel id="priorityInputChannel">
        <int:priority-queue capacity="10" />
    </int:channel>

    <int:gateway service-interface="com.ddubson.PrinterGateway" default-request-channel="priorityInputChannel" />

    <bean class="com.ddubson.PrintService" id="printService"/>

    <int:service-activator ref="printService" method="print"
                           input-channel="priorityInputChannel">
        <int:poller fixed-rate="2" time-unit="SECONDS" max-messages-per-poll="2" />
    </int:service-activator>
</beans>